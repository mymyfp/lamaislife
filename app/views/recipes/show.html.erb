<h1><%= @recipe.name %></h1>
<%= cl_image_tag @recipe.photo.key, height: 300, width: 400, crop: :fill %>
<p><%= @recipe.description %></p>
<p><%= @recipe.votes %></p>
<%= link_to "Revenir aux recettes", recipes_path, class: "btn btn-primary btn-lg" %>
<%= link_to "Voter pour cette recette", vote_recipe_path(@recipe), method: :patch, class: "btn btn-primary btn-lg" %>
